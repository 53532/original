<% if books %>
  <div class="row">
    <% books.each do |book| %>
      <div class="book">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="box">
            <div class="panel panel-default">
              <div class="panel-heading">
                <img src="<%= book.image_url %>" alt="" >
              </div>
              <div class="panel-body text-center">
                <p class="book-title">
                  <%= link_to book.title, book %>
                </p>
                <% if book.user_id != nil %>
                  <span class="borrowed label label-info">貸出中</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
<% end %>