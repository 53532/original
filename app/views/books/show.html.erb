
	<div class="container">
      <div class="row">
      	<div class="col-md-6">
					<img src="<%= @book.image_url %>" alt=""　width="400" height="600">
				</div>
	 			<div class= "col-md-6">
	 				<div class ="content">
						<p>タイトル：<%= @book.title %></p>
						<p>著者:<%= @book.author %></p>
						<p>出版社：<%= @book.publisher_name %></p>
						<p>出版日：<%= @book.published_date %></p>
						<p>ISBN：<%= @book.isbn %></p>
						<p>図書館登録日：<%= @book.created_at %></p>
						<% unless @book.user_id == nil %> 
							<p>借りている人：<%= @book.user.name %></p>
						<% end %>
						<%= render 'books/borrow_button' %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
			<%= link_to "図書館から削除する", @book, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger' %>
				</div>
			</div>
			
</div>